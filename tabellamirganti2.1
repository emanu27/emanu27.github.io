<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabella con Grafico</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        canvas {
            margin-top: 20px;
            max-width: 100%;
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <h1>Carica un file CSV</h1>
    <input type="file" id="fileInput" accept=".csv" onchange="caricaCSV(this)">
    <table id="csvTable"></table>
    <canvas id="grafico" width="600" height="400"></canvas>

    <script>
        function caricaCSV(input) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const csvText = event.target.result;
                    mostraTabella(csvText);
                    generaGrafico(csvText);
                };
                reader.readAsText(file);
            } else {
                alert("Nessun file selezionato.");
            }
        }

        function mostraTabella(csvText) {
            const righe = csvText.split("\n");
            const table = document.getElementById("csvTable");
            table.innerHTML = "";
            righe.forEach((riga, indice) => {
                const row = table.insertRow();
                riga.split(",").forEach(cell => {
                    const cellElement = indice === 0 ? document.createElement("th") : document.createElement("td");
                    cellElement.textContent = cell.trim();
                    row.appendChild(cellElement);
                });
            });
        }

        function generaGrafico(csvText) {
            const righe = csvText.split("\n");
            const intestazioni = righe[0].split(",").map(h => h.trim());
            const dati = righe.slice(1).map(riga => riga.split(",").map(cella => cella.trim()));
            const etichette = dati.map(riga => riga[0]);
            const valori = dati.map(riga => parseFloat(riga[1]) || 0);
            const canvas = document.getElementById("grafico");
            const ctx = canvas.getContext("2d");
            
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = "#f2f2f2";
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            const maxVal = Math.max(...valori);
            const barWidth = canvas.width / valori.length - 10;
            const scale = (canvas.height - 40) / maxVal;
            
            ctx.fillStyle = "blue";
            valori.forEach((val, i) => {
                const barHeight = val * scale;
                ctx.fillRect(i * (barWidth + 10) + 20, canvas.height - barHeight - 20, barWidth, barHeight);
                ctx.fillStyle = "black";
                ctx.fillText(etichette[i], i * (barWidth + 10) + 20, canvas.height - 5);
                ctx.fillStyle = "blue";
            });
        }
    </script>
</body>
</html>
